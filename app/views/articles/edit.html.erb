<h1>Edit an article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved:</h2>
  <ul>
    <% @article.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%# articles_path is a short hand for /articles %>
<%= form_with(model: @article, data: {turbo: false}, local: true) do |f|%>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>

  <p><%= f.label :description %></p>
  <p><%= f.text_area :description %></p>

  <p><%= f.submit %></p>
<% end %>

<%= link_to 'Cancel and return to articles listing', articles_path  %>
